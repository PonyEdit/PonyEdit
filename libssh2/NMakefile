!include "win32/config.mk"

# SUBDIRS=src example
SUBDIRS=src

all-sub:
	-for %D in ($(SUBDIRS)) do $(MAKE) /nologo /f %D/NMakefile BUILD=$(BUILD) SUBDIR=%D all-sub

clean: 
	-rmdir /s/q $(TARGET)

real-clean: clean
	-del libssh2.dll
	-del libssh2.exp
	-del libssh2.ilk
	-del libssh2.lib
	-del *.pdb


