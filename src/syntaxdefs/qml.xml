<language name="QML" version="3" kateversion="5.0" section="Scripts" extensions="*.qml;*.qmltypes"
          mimetype="text/x-qml;application/x-qml" indenter="cstyle"
          author="Milian Wolff (mail@milianw.de)" license="LGPL">
  <highlighting>
