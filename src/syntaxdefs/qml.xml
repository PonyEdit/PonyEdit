      <item>FocusScope</item>
      <item>Flickable</item>
      <item>Flipable</item>
      <item>WebView</item>
      <item>Loader</item>
      <item>Repeater</item>
      <item>SystemPalette</item>
      <item>GraphicsObjectContainer</item>
      <item>LayoutItem</item>
      <item>ListView</item>
      <item>GridView</item>
      <item>PathView</item>
      <item>Path</item>
      <item>PathLine</item>
      <item>PathQuad</item>
      <item>PathCubic</item>
      <item>PathAttribute</item>
      <item>PathPercent</item>
      <item>Column</item>
      <item>Row</item>
      <item>Grid</item>
      <item>Scale</item>
      <item>Rotation</item>
